<Window x:Class="RegAnLOg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegAnLOg"
        mc:Ignorable="d"
        Title="PushkinHub.com" Height="450" Width="800" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Aqua"> 
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Чтобы посмотреть HOTS PHOTOS WITH PINGUINS нажмите на одну из кнопок ниже." Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Войти" Grid.Column="1" Grid.Row="3" Background="LightSalmon"  Click="Button_Click_Log"/>
        <Button Content="Зарегестрироваться" Grid.Column="3" Grid.Row="3" Background="Orange" Click="Button_Click_Reg"/>
    </Grid>
</Window>
